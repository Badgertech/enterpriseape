<p id="notice"><%= notice %></p>

<h1>Listing Employees</h1>

<table>
  <thead>
    <tr>
      <th>Name  </th>
      <th>Phone  </th>
      <th>Job Type </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.phone %></td>
        <td><%= employee.job %></td>
        <td><%= link_to 'Show', employee, class:'btn btn-mini default'%></td>
        <td><%= link_to 'Edit', edit_employee_path(employee), class:'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, class:'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <h3>Import Employees File</h3>
        <%= form_tag import_employees_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Upload Employees", class: 'btn btn-default' %>
    <% end %>
    <h3>Download File</h3>
        <%= link_to "Report", employees_path(format: "csv"), class: 'btn btn-default' %>
